{
    "manifest_version": 2,

    "name": "Securiffy",
    "description": "Generate secure passwords on the fly",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "src/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
