{
    "manifest_version": 2,

    "name": "Securiffy",
    "description": "Generate secure passwords on the fly",
    "version": "0.1",
    "update_url": "http://0.0.0.0/",

    "icons": {
        "128": "images/icon.png",
        "16": "images/icon.png",
        "48": "images/icon.png"
    },

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "src/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "persistent": false,
        "scripts": ["src/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "src/jquery-3.2.1.slim.min.js", 
                "src/password_mvc.js", 
                "src/content.js"
            ]
        }
    ]
}
